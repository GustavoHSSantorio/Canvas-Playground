<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.canvasplayground">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CanvasPlayground">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SlideAnimationActivity" />
        <activity android:name=".activity.GeometricActivity" />
        <activity android:name=".activity.RotationAnimationActivity" />
        <activity android:name=".activity.LottieActivity" />
        <activity android:name=".activity.LineChartActivity" />
    </application>

</manifest>